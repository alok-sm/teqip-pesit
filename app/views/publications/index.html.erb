<% @publications.each do |publication| %>
 <a href="/publications/<%= publication.id %>">  
  <div class="card">
	<div class="card-inner">
	<center><h4>Author :&nbsp<%= publication.author %></h4></center>
    <center><h4>Description :&nbsp<%= publication.description %></h4></center>
  </div>
</div>
</a>  
