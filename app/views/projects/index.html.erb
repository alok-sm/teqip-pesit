<br><br><br>
   
<center><h1>Listing projects</h1></center><br>

<center><b><% if user_signed_in? %>
<%= link_to 'New Project', new_project_path %><% end %></center></b>

<% @projects.each do |project| %>
<a href="/projects/<%= project.id %>">  
  <div class="card">
	<div class="card-inner">

    <center><h3><%= project.title %></h3></center>
    <b>Description:</b><%= project.description %>
    
    <br><br>

	</div>
</div>  
</a>

<center>
<% if user_signed_in? %>
    	<%= link_to 'Edit', edit_project_path(project) %> |
    	<%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %> <b><%= project.title %></b>
    <% end %>
</center>
<% end %>


<br />

<center><%= paginate @projects %></center>


    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
