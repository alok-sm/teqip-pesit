<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h3>What</h3>
    <%= f.text_field :title, :required => true %>
  </div><br />
  <div class="field">
    <h3>When</h3>
    <%= f.date_select :when, :required => true %>
  </div><br />
  <div class="field">
    <h3>Where</h3>
    <%= f.text_field :where, :required => true %>
  </div><br />
  <div class="field">
    <h3>Remarks</h3>
    <%= f.text_area :remarks, :size => "40x5" %>
  </div><br />
  <div class="actions">
    <center><%= f.submit %></center>
  </div>
<% end %>
